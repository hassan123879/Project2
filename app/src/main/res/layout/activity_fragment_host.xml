<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/btnRed"
            android:text="Red"
            android:layout_height="24dp"  android:layout_width="12dp"/>
        <Button android:id="@+id/btnGreen" android:text="Green" android:layout_height="24dp" android:layout_width="12dp" />
        <Button android:id="@+id/btnBlue" android:text="Blue" android:layout_height="24dp" android:layout_width="12dp" />
        </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
